<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEEEE"
    android:orientation="vertical"
    android:paddingTop="20pt">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="10pt"
        android:layout_weight="0.1"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/list_post_user_image"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:src="@drawable/avatar0" />

        <TextView
            android:id="@+id/list_post_user_name"
            android:layout_width="202dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_weight="0.5"
            android:ellipsize="end"
            android:padding="5dp"
            android:text="JJJ"
            android:textColor="#81D8D1"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/list_post_btn_sub"
            android:layout_width="69dp"
            android:layout_height="37dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:drawablePadding="8dp"
            android:paddingTop="15dp"
            android:text="23"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="0.7"
        android:background="@drawable/round_corner5"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLines="20"
        android:padding="10pt"
        android:text="ab\ncd"
        android:textSize="16sp" />

    <com.example.wetok.view.fragment.MyLinearLayout
        android:id="@+id/list_post_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_margin="8pt"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_post_like"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="0.1"
            android:background="#00000000"
            android:drawablePadding="10dp"
            android:paddingTop="5dp"
            android:text="123"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/list_post_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="#00000000"
            android:drawablePadding="0dp"
            android:gravity="right"
            android:paddingTop="5dp"
            android:text="23"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Delete"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:gravity="center"
            android:text="Delete"
            android:visibility="visible"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
